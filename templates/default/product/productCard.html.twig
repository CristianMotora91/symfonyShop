{% block body %}
    <div class="col-3 mt-3 px-3 pt-3">
        <div class="card align-middle w-100">
        <a href="{{ url('product',{'product':product.id}) }}"><img class="card-img-top" src="{{  asset('images/' ~ product.images) }}" alt="{{ product.name }}" style="width: 200px; height: 180px;"></a>
            <div class="card-body text-center ">
                <h4 class="card-title">{{ product.name }}</h4>
                <h5><s>{{ product.price }}</s><span>Lei</span></h5>
                <p><span>Discount</span>&nbsp;({{ product.discount }}%)</p>
                <small>Pret nou: </small><h4 style="color: red;">{{ product.getFinalPrice() }} <span>Lei</span></h4>
                <a class="btn btn-primary w-100 mt-4 fa fa-shopping-cart" href="{{ url('cart_add',{'product':product.id}) }}" >Adauga in cos</a>
            </div>
        </div>
    </div>
{% endblock %}
