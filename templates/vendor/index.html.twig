{% extends 'base.html.twig' %}

{% block title %}{{ vendor.name }} - Magazinul colectionarului{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <div class="row mt-5">
                <div class="col-12">
                    <h2>{{ vendor.name }}</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-12">
            <div class="row">
            {% for product in vendor.getProducts() %}
                {{ include ('default/product/productCard.html.twig') }}
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
